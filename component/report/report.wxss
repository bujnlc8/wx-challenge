.board {
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 10001;
  background-color: rgba(0, 0, 0, 0.5);
}

.feedback {
  margin-top: 16px;
  border-radius: 20px;
  width: 84%;
  background-color: white;
  z-index: 10006;
  position: fixed;
  top: 15%;
  left: 8%;
}

.feedback_text {
  background-color: #61ac85;
  width: 100%;
  height: 26px;
  line-height: 26px;
  text-align: center;
  border-top-right-radius: 16px;
  border-top-left-radius: 16px;
}

.feedback_checkbox {
  transform: scale(0.8);
  color: rgb(97, 113, 114);
  margin-left: 12px;
  padding-top: 5px;
}

.remark {
  border: 1px dashed #61ac85;
  margin-left: 7%;
  border-radius: 20px;
  width: 80%;
  margin-top: 10px;
  padding: 8px;
  caret-color: #61ac85;
}

.feedback-bottom {
  padding-bottom: 13px;
  padding-top: 8px;
}

.feedback-label {
  padding-left: 8px;
}
