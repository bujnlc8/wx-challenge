.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

page {
  background-color: #f3f3f2;
  font-size: 15px;
  line-height: 1.6;
  font-family: -apple-system, BlinkMacSystemFont, "PingFang SC",
    "Helvetica Neue", STHeiti, "Microsoft Yahei", Tahoma, Simsun, sans-serif !important;
  -webkit-tap-highlight-color: transparent;
}

.blink_me {
  animation: blinker 3s linear infinite;
}

@keyframes blinker {
  50% {
    opacity: 0;
  }
}

.rule-item {
  padding: 5px;
  line-height: 25px;
  font-size: 15px;
}
.rule-item-indent {
  padding-left: 21px;
}

.hi-num {
  /* font-weight: 700;
  font-size: 16px; */
}

.question-common {
  text-align: left;
  margin-left: 12%;
  margin-right: 12%;
  margin-top: 10px;
  line-height: 31px;
  font-size: 17px;
}

.question_body {
  font-size: 17px;
}

.option-common {
  align-items: center;
  display: flex;
  border: 1.5px solid #c6e6e8;
  margin-top: 16px;
  border-radius: 26px;
  min-height: 42px;
  font-size: 16px;
  padding-left: 12px;
  padding-right: 8px;
  padding-top: 5px;
  padding-bottom: 5px;
  word-break: break-all;
}

.option_selected {
  background-color: #c6e6e8;
  font-weight: 700;
}

.answer_result0 {
  background-color: #ed9db2 !important;
  color: white;
  font-weight: 700;
}

.answer_result1 {
  background-color: #61ac85 !important;
  color: white;
  font-weight: 700;
}

.image-option {
  width: 166px;
  padding: 5px;
}

.image-question {
  width: 80%;
  padding: 5px;
}

.video-option {
  width: 291px;
  height: 127px;
  padding: 5px;
}

.iknow {
  text-align: center;
  border-radius: 13px;
  border: 1.5px solid #c6e6e8;
  font-size: 16px;
  font-weight: bold;
  width: 104px;
  padding: 10px;
  margin: auto;
  margin-top: 10px;
  height: 50rx;
  line-height: 26px;
  margin-bottom: 10px;
}
.iknow:hover {
  font-weight: 700;
  font-size: 18px;
}

.pop-tip {
  background-color: white;
  border-radius: 20px;
  padding: 5px;
  z-index: 10002;
  position: fixed;
  top: 48%;
  width: 90%;
  /* border: 1.5px solid #c6e6e8; */
  left: 50%;
  transform: translate(-50%, -50%);
  box-sizing: bordre-box;
}

.pop-tip-title {
  text-align: center;
  font-size: 18px;
  font-weight: 700;
  margin-top: 10px;
  margin-bottom: 10px;
}

.skip {
  font-size: 16px;
  color: #61ac85;
  height: 35px;
  line-height: 35px;
  padding-left: 5px;
  padding-right: 5px;
  border: 1px solid #61ac85;
  border-radius: 18px;
}

.top-text {
  min-width: 62px;
  text-align: center;
}

.question-container {
  padding-bottom: 16px;
}

.common-gray {
  font-size: 14px;
  color: gray;
}

.underline-class {
  text-decoration: underline;
}
.board {
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 10001;
  background-color: rgba(0, 0, 0, 0.5);
}
